<%- include('partials/feedHeader') -%>
<div class="container">


  <!-- new one -->

  <section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-9 col-xl-7">
          <div class="card">
         

<!-- add post begins -->
<div class="mt-5">
  <h2>Post your review</h2>
  * Required
  <form action="/post/createPost" enctype="multipart/form-data" method="POST"> <!---enctype is for multer to work-->
    <div class="mb-3">
      <label for="caption" class="form-label">Your review *</label>
      <textarea class="form-control" id="caption" name="caption"></textarea>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Where did the service happen or person located *</label>
      <input type="text" class="form-control" id="location" name="location">
  </div>
    <div class="mb-3">
      <label for="imgUpload" class="form-label">Image</label>
      <input type="file" class="form-control" id="imageUpload" name="file">
    </div>
    <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
  </form>
</div>
<!-- Add post ends -->

              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0">Recent post</p>
                
              </div>
              <div class="row g-2">
                <div class="col mb-2">
                  <% for(var i=0; i<posts.length; i++) {%>
                    <li style="margin-bottom: 21px;
                    border-bottom: 2px dotted black;
                    padding-bottom: 20px;">
                      <a href="/post/<%= posts[i].id %>  ">
                        <p><%= posts[i].caption %></p>
                      </a>
                    </li>
                    <% } %>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>
<%- include('partials/footer') -%>