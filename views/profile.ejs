<%- include('partials/feedHeader') -%>
<div class="container">


  <!-- new one -->

  <section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-9 col-xl-7">
          <div class="card">
            <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px; z-index: 2;">
              <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                <img src="https://source.boringavatars.com/pixel/120/Stefan?colors=26a653,2a1d8f,79646a"
                  alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                  style="width: 150px; border-radius: 50%; z-index: 1">
        
              </div>
              <div class="ms-3" style="margin-top: 130px;">
                <h5><%= user.userName %></h5>

              </div>
            </div>
            
            <div class="card-body p-4 text-black">
              <div class="mb-5">
                <p class="lead fw-normal mb-1">About</p>
                <div class="p-4" style="background-color: #f8f9fa;">
                  <!-- <p class="font-italic mb-1">Web Developer</p>
                  <p class="font-italic mb-1">Lives in New York</p>
                  <p class="font-italic mb-0">Photographer</p> -->
                  <p class="font-italic mb-0">Location: <%= user.location %></p>
                </div>
              </div>


               <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0">Recent post</p> 
               
              </div> 
              <div class="row g-2">
                <div class="col mb-2"> 
                  <% for(var i=0; i<posts.length; i++) {%>
                    <li style="margin-bottom: 21px;
                    border-bottom: 2px dotted black;
                    padding-bottom: 20px;">
            
                      <a href="/post/<%= posts[i].id %>  ">
                        <p><%= posts[i].caption %></p>
                      </a>
                    </li>
                    <% } %>
                  </div> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>
<%- include('partials/footer') -%>